{
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Minimax",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/play.py",
            "args": ["--mode=mm"],
            "console": "integratedTerminal"
        }
    ]
}